<input hidden id="room-id" value="<%= room._id %>" />
<input value="<%=user.username%>" hidden id="username" />

<div class="container chat-window">
    <a class="mr-0" href="/dashboard"><i class="fas fa-2x fa-arrow-left mt-3"></i></a>
    <!-- <main class="chat-main"> -->
    <div class="chat-sidebar text-center">
        <h3>Room Name: <%- room.name %>
        </h3>
    </div>
    <div class="container h-75 mt-5 p-3 d-flex chat-messages-container card flex-column">
        <div class="chat-messages">
            <% for(message of messages) { %>
                <div class="<%= message.author.username === user.username ? 'my-message' : 'your-message'%>">
                    <p>
                        <%= message.author.username + " " + moment(message.time).format("YYYY MMMM D, HH:mm") %>
                    </p>
                    <p>
                        <%=message.message%>
                    </p>
                </div>
                <%}%>
        </div>
        <div class="chat-form-container w-100 mt-auto">
            <form id="chat-form">
                <input id="msg" type="text" class="w-100 bg-light rounded-pill border-light"
                    placeholder="Enter Message..." required autocomplete="off" />
                <button class="btn btn-primary btn-mobile"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
            </form>
        </div>
    </div>
    <!-- </main> -->
</div>
</div>